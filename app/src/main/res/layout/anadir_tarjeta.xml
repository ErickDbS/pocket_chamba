<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="736dp"
        android:background="#9B16E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTextoAnadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txtAñadir"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp"
            tools:text="Añadir Tarjeta" />

        <TextView
            android:id="@+id/txtNumTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="txtTarjeta"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Número de tarjeta:" />

        <Button
            android:id="@+id/btnGuardarTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:text="Guardar Información"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtFechaTarjeta"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="MM/YYYY"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="201dp" />

        <TextView
            android:id="@+id/txtFechaExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txtExpiracion"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="169dp"
            tools:text="Fecha exp." />

        <TextView
            android:id="@+id/txtCvvTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txtCvv"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="169dp"
            tools:text="CVV" />

        <EditText
            android:id="@+id/txtTarjeta"
            android:layout_width="372dp"
            android:layout_height="39dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="xxxx-xxxx-xxxx-xxxx"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="109dp" />

        <EditText
            android:id="@+id/txtCvv"
            android:layout_width="146dp"
            android:layout_height="46dp"
            android:layout_marginEnd="40dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="123"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="201dp" />

        <Spinner
            android:id="@+id/spnPaises"
            android:layout_width="372dp"
            android:layout_height="31dp"
            android:background="@color/white"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="302dp" />

        <TextView
            android:id="@+id/txtPaises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txtPais"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="268dp"
            tools:text="País" />

        <EditText
            android:id="@+id/txtNombreTarjeta"
            android:layout_width="372dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Ej. Carlos Garcia"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="393dp" />

        <TextView
            android:id="@+id/txtTitularTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txtTitular"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="358dp"
            tools:text="Titular de la tarjeta:" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>